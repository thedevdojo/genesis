{
    "name": "devdojo/genesis",
    "description": "An Application Starter Kit - Built with Laravel Folio and Volt",
    "keywords": [
        "devdojo",
        "genesis",
        "alpine",
        "alpinejs",
        "tailwind",
        "tailwindcss",
        "tailwindui",
        "tall",
        "laravel",
        "livewire",
        "preset",
        "volt",
        "folio"
    ],
    "homepage": "https://github.com/devdojo/genesis",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Tony Lea",
            "email": "tony@devdojo.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0",
        "laravel/ui": "^4.2",
        "livewire/livewire": "^3.0",
        "livewire/volt": "^1.0",
        "laravel/folio": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.10"
    },
    "autoload": {
        "psr-4": {
            "Devdojo\\Genesis\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Devdojo\\Genesis\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Devdojo\\Genesis\\GenesisServiceProvider"
            ],
            "aliases": {
                "Genesis": "Devdojo\\Genesis\\GenesisFacade"
            }
        }
    }
}
